NODE_ENV=production
PORT=5000
CLIENT_PORT=3000

# Database (Production)
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=voe_production
DB_USERNAME=your-db-username
DB_PASSWORD=your-secure-db-password

# JWT (Production - CHANGE THESE!)
JWT_SECRET=your-very-secure-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRE=7d

# Email (Production)
EMAIL_HOST=smtp.your-company.com
EMAIL_PORT=587
EMAIL_USER=noreply@your-company.com
EMAIL_PASS=your-email-password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./server/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx

# Security (Production)
BCRYPT_ROUNDS=14
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=50

# Frontend URL
FRONTEND_URL=https://your-domain.com
